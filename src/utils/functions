#!/bin/bash

###START###

# Handle the development mode
function handle_dev_mode() {
    if [[ "$@" == *"-dev"* ]]; then
        HOME_DIR="$(pwd)/.myshell"
    fi
}

function check_if_command_exists() {
    if [ -z "$1" ]; then
        echo "INTERNAL: Command not specified!"
        exit 1
    fi

    if command -v "$1" &> /dev/null; then
        echo "Command '$1' does already exist!"
        exit 1
    fi

}

###END###